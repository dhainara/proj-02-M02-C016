<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/css/detalhes.css" rel="stylesheet" />
    <title>Detalhes</title>
</head>

<body>
    <%-include('./partials/header.ejs')%>

    <main>
        <section id="card_poke">
            <article class="card">
                <div id="card_title">
                    <div class="card_title">
                        <h2><%=pokemon.name%></h2>
                        <p><%=pokemon.type%></p>
                    </div>
                    <div class="card_titleImg">
                        <img src="/img/<%=pokemon.image%>" />
                    </div>
                    
                </div>
                <div id="card_data">
                    <div class="card_data">
                        <h6>Peso</h6>
                        <p><%=pokemon.weight%></p>
                    </div>
                    <div class="card_data">
                        <h6>Altura</h6>
                        <p><%=pokemon.height%></p>
                    </div>
                    <div class="card_data">
                        <h6>Categoria</h6>
                        <p><%=pokemon.category%></p>
                    </div>
                    <div class="card_data">
                        <h6>Habilidade</h6>
                        <p><%=pokemon.ability%></p>
                    </div>
                </div>
                <div id="card_description">
                    <p><%=pokemon.description%></p>
                </div>
            </article>
        </section>
    </main>
    <%-include('./partials/footer.ejs')%>
</body>

</html>